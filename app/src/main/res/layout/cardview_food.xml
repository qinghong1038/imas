<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/horizontal_padding">
        <!--
        <com.android.volley.toolbox.NetworkImageView
                android:scaleType="fitXY"
                android:id="@+id/food_img"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
                -->
        <ImageView
            android:id="@+id/food_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/food_sample" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Id: "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/food_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="food id"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/food_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="Food Name"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/food_category_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category:" />

                <TextView
                    android:id="@+id/food_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="Veg / Non Veg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/food_price_final"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="Price: "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/food_price"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="Price"
                    android:textSize="16sp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>